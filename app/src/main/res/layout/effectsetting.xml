<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="@drawable/bg3">
       
    
 <RelativeLayout
      android:id="@+id/toplayout" 
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:background="#7D5A5A">

   <Button
          android:id="@+id/btn_effectback"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:background="@drawable/back4"
          android:layout_margin="3dp"
          android:layout_alignParentLeft="true" />
     
  <Button
          android:id="@+id/btn_refresh"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:background="@drawable/undo"
          android:layout_margin="3dp"
          android:layout_toRightOf="@+id/btn_effectback" />

      <TextView
          android:id="@+id/txt_effecttitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=""          
          android:textColor="#ffffff"
          android:layout_margin="5dp"
          android:textSize="14dp"
          android:textStyle="bold"
          android:layout_centerHorizontal="true"/>
       
      
        <Button
          android:id="@+id/btn_effectsave"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:background="@drawable/save"
          android:layout_margin="3dp"
          android:layout_toLeftOf="@+id/btn_effectshare"/>
      
      <Button
          android:id="@+id/btn_effectshare"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:background="@drawable/share"
          android:layout_margin="3dp"
         android:layout_alignParentRight="true"/>
      
      
      
      
      
    
    </RelativeLayout>
    
 
      <FrameLayout        
        android:id="@+id/fl_effectVew" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:background="@drawable/bg3"
        android:layout_below="@+id/toplayout"
        android:layout_above="@+id/seek_layout">       
     
     
       <ImageView
          android:id="@+id/imgview_settingeffect"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/toplayout"
           android:layout_above="@+id/seek_layout"/>
         
         </FrameLayout> 
         
         <LinearLayout 
             android:layout_alignParentBottom="true"
             android:id="@+id/seek_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="5dp"
            >
         
         <TextView 
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:text="(-)"
             android:textSize="30dp"
             android:textColor="#ffffff"
             android:textStyle="bold"
              android:layout_margin="3dp"/>
         
         <SeekBar
             android:layout_alignParentBottom="true"
             android:id="@+id/seek_adjectment"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="5dp"
             android:layout_weight="1"/>                  

         
         <TextView 
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:text="(+)"
             android:textSize="30dp"
             android:textColor="#ffffff"
             android:textStyle="bold"
              android:layout_margin="3dp"/>
         
         </LinearLayout>
         
         
 <HorizontalScrollView
       android:id="@+id/hsv_eeffect_layout"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:orientation="vertical"
       android:background="#ff0000"
       android:layout_below="@+id/toplayout">       
    
  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="2dp"
    android:background="@drawable/bg3"
     android:layout_below="@+id/imgview_settingeffect">
    
     
<ImageView
          android:id="@+id/bmp_effect1"
          android:layout_width="60dp"
          android:layout_height="60dp"
          />
    
     <ImageView
          android:id="@+id/bmp_effect2"
          android:layout_width="60dp"
          android:layout_height="60dp"
         />
     
     
      <ImageView
          android:id="@+id/bmp_effect3"
          android:layout_width="60dp"
          android:layout_height="60dp"
           />
      
      
       <ImageView
          android:id="@+id/bmp_effect4"
          android:layout_width="60dp"
          android:layout_height="60dp"
          />
       
       <ImageView
          android:id="@+id/bmp_effect5"
          android:layout_width="60dp"
          android:layout_height="60dp"
          />
    
     <ImageView
          android:id="@+id/bmp_effect6"
          android:layout_width="60dp"
          android:layout_height="60dp"
         />
     
     
      <ImageView
          android:id="@+id/bmp_effect7"
          android:layout_width="60dp"
          android:layout_height="60dp"
           />
      
      
       <ImageView
          android:id="@+id/bmp_effect8"
          android:layout_width="60dp"
          android:layout_height="60dp"
          />
       
 
</LinearLayout>
</HorizontalScrollView>
    

</RelativeLayout>